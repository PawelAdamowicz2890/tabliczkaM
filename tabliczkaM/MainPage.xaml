<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tabliczkaM.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <HorizontalStackLayout Spacing="18">
                <Label 
                    Text="Podaj rozmniar"
                    FontSize="32"/>
                <Entry 
                    x:Name="entRozmiar"
                    Text="1"
                    FontSize="32"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="10">
                <Button 
                    Text="Generuj"
                    Clicked="btnGenerujClicked"/>
                <Button 
                    Text="Reset"
                    Clicked="btnResetClicked"/>
            </HorizontalStackLayout>
            <Label 
                Text="Tabliczka mnożenia"
                HorizontalOptions="Center"
                x:Name="lblTabliczka"
                FontSize="24"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
